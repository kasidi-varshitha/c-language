#include<stdio.h>
void main()
{
	int n,i,sum,flag,count;
	scanf("%d",&n);
	count=0;
	flag=0;
	i=1;
	sum=0;
	while(count<=n)
	{
		if(i%2==0){
			if(flag==0)
			{
				printf("%d",i);
				flag=1;
			}
			else
			{
				printf("+%d",i);
			}
	    
		
		sum=sum+i;
	
		count++;
	}
	i++;
	
	    
	}
	printf("=%d",sum);
}
